{
    "name": "pdv-master-backend",
    "version": "1.0.0",
    "description": "Backend para PDV Master - Gerenciamento completo",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:migrate": "tsx src/scripts/migrate.ts",
        "db:seed": "tsx src/scripts/seed.ts",
        "migrate": "node migrate.js",
        "seed": "node seed.js",
        "init-db": "node migrate.js && node seed.js",
        "test": "vitest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.{ts,js,json,md}"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "esbuild": "^0.27.0",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.3",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.3",
        "socket.io": "^4.7.4",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.16",
        "@types/express": "^4.17.21",
        "@types/express-fileupload": "^1.4.4",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.1",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3",
        "vitest": "^4.0.15"
    },
    "keywords": [
        "pdv",
        "erp",
        "pos",
        "postgresql",
        "backend"
    ],
    "author": "PDV Master",
    "license": "MIT"
}
